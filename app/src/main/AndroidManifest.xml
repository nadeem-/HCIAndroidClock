<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hci.androidclock" >
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DrawClockActivity"
            android:label="@string/title_activity_draw_clock" >
        </activity>
        <activity
            android:name=".UserSettingActivity"
            android:label="UserSettingActivity" >
        </activity>
        <activity
            android:name=".ColorPickerActivity"
            android:label="@string/title_activity_color_picker" >
        </activity>
    </application>

</manifest>
