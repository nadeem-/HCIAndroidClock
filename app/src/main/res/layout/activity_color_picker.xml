<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.hci.androidclock.ColorPickerActivity"
              android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen"
              android:orientation="vertical">


    <GridView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/gridView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:numColumns="4"
        android:choiceMode="singleChoice"
        android:layout_weight="5"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignStart="@+id/gridView"
        android:layout_below="@+id/gridView"
        android:layout_above="@+id/selectColors"
        android:weightSum="1"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Color 1"
            android:background="#000000"
            android:id="@+id/colorButton1"
            android:layout_weight="0.5"
            android:textColor="#FFFFFF"
            android:padding="0dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Color 2"
            android:background="#000000"
            android:id="@+id/colorButton2"
            android:layout_weight="0.5"
            android:textColor="#FFFFFF"
            android:padding="0dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignStart="@+id/gridView"
        android:layout_below="@+id/gridView"
        android:layout_above="@+id/selectColors"
        android:weightSum="1"
        android:layout_weight="0.1"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:id="@+id/Selector1"
            android:layout_weight="0.5"
            android:padding="0dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#000000"
            android:id="@+id/Selector2"
            android:layout_weight="0.5"
            android:padding="0dp"
            android:soundEffectsEnabled="false"/>
    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="Select Colors"
        android:id="@+id/selectColors"
        android:background="#bdc3c7"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_weight="0.6"
        android:textColor="#ffffff"/>

</LinearLayout>
